---
import PageLayout from '../layouts/Page.astro';
import Container from '../components/Container.astro';

const title = "Astro NetlifyCMS Example"
const lang = 'nl'
const blogPosts = Astro
	.fetchContent('./blog/*.md')
	.map((post) => {
		return (
			<li>
				<a href={post.url}>{post.title}</a>
			</li>
		)
	})
---
<PageLayout title={title} lang={lang}>

	<Container>
		<h1>Astro &amp; Tailwind starter</h1>
		<h1>{title}</h1>
		<ol>{blogPosts}</ol>
	</Container>

</PageLayout>