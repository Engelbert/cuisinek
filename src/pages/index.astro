---
import PageLayout from 'layout:Page';
import Container from 'component:atoms/Container';
	const title = "Astro NetlifyCMS Example"
	const lang = 'fr'
	const blogPosts = Astro
		.fetchContent('./blog/*.md')
		.map((post) => {
			return (
				<li>
					<a href={post.url}>{post.title}</a>
				</li>
			)
		})
---
<PageLayout title={title} lang={lang}>

	<Container>

		<h1>Astro &amp; Tailwind starter</h1>
		<h1>{title}</h1>
		<ol>{blogPosts}</ol>
	</Container>

</PageLayout>