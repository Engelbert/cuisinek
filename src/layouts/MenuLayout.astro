---
// src/layouts/MenuLayout.astro
import { Markdown } from 'astro/components';
import HtmlHead from '../components/Head.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
const { content } = Astro.props;
const {title, voor, hoofd, na, date} = content;
---

<HtmlHead title="CuisineK"/>

<body>
<!-- scoped Astro styles that apply only to the current page (not to children or other components) -->
<style>
	h4 {
	text-transform: capitalize;
	font-family: "Caviar Dreams";
	font-weight: 600;
	text-align: left;
	}
	blockquote {
	display: flex;
  	justify-content: flex-end;
	text-align: right;
	color: rgb(115 115 115);
	}
	p {
	text-align: left;
	}
</style>
	<div class="md:flex flex-col md:container md:mx-auto text-center sm:text-left justify-center">
		<Header title="Cuisine K" />
		<Hero />
		<main class="bg-white shadow-md px-6">
			<h1 class="text-center text-4xl">{title}</h1>
			<h2 class="text-center text-3xl">{date}</h1>
			<h3 class="text-left text-2xl">Voorgerecht</h3>
		 		<Markdown>{voor}</Markdown>
			<h3 class="text-left text-2xl">Hoofdgerecht</h3>
				<Markdown>{hoofd}</Markdown>
			<h3 class="text-left text-2xl">Nagerecht</h3>
		 		<Markdown>{na}</Markdown>
			<div class="md:container md:mx-auto flex flex-row-reverse">
				<blockquote class="text-right">* Alle prijzen zijn per persoon/portie, tenzij anders vermeltd.</blockquote>
			</div>
		</main>
		<Footer title="Cuisine K"/>
	</div>
</body>